<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:actionProviderClass="android.widget.ShareActionProvider"
    android:background="@drawable/game_background"
    android:layoutDirection="ltr"
    android:soundEffectsEnabled="true"
    tools:context="com.dan.kaftan.mathgame.Game"
    tools:layout_editor_absoluteY="89dp">


    <TextView
        android:id="@+id/tv"
        android:layout_width="337dp"
        android:layout_height="101dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:gravity="top|center_vertical|center"
        android:text="5x5"
        android:textAlignment="gravity"
        android:textColor="@android:color/holo_orange_light"
        android:textColorLink="@android:color/background_dark"
        android:textSize="60sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer" />

    <TextView
        android:id="@+id/tva1"
        android:layout_width="172dp"
        android:layout_height="69dp"
        android:background="@drawable/answer_button"
        android:clickable="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="tva1OnClick"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimary"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <TextView
        android:id="@+id/tva2"
        android:layout_width="172dp"
        android:layout_height="69dp"
        android:background="@drawable/answer_button"
        android:clickable="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="tva2OnClick"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimary"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />

    <TextView
        android:id="@+id/tva3"
        android:layout_width="172dp"
        android:layout_height="69dp"
        android:background="@drawable/answer_button"
        android:clickable="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="tva3OnClick"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimary"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <TextView
        android:id="@+id/tva4"
        android:layout_width="172dp"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/answer_button"
        android:clickable="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:onClick="tva4OnClick"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimary"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tva2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.733" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="345dp"
        android:layout_height="242dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="?android:attr/scrollbarTrackVertical" />

    <TextView
        android:id="@+id/score"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_marginEnd="224dp"
        android:layout_marginTop="60dp"
        android:fontFamily="casual"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_light"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/hiv1"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/hiv2"
        android:layout_width="35dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/hiv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/hiv3"
        android:layout_width="35dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/hiv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="73dp"
        android:layout_height="67dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/clock"
        android:fontFamily="casual"
        android:gravity="center_horizontal|center"
        android:text="0"
        android:textAlignment="gravity"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="321dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7775472521601802/4903178791"
        ads:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></com.google.android.gms.ads.AdView>

    <TextView
        android:id="@+id/level_tv"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30dp"
        ads:layout_constraintBottom_toTopOf="@+id/iv"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/home_btn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/menu_btn2"
        android:onClick="homeClick"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
